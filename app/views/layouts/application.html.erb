<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Add these line for detecting device width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar bg-light border-bottom mb-4 p-3">
      <%= link_to restaurants_path do %>
        <p class="mb-0 ml-4"><i class="fas fa-utensils mr-2"></i>View All</p>
      <% end %>
      <%= link_to new_restaurant_path do %>
        <p class="mb-0 mr-4"><i class="fas fa-plus-circle mr-2"></i>New Restaurant</p>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
