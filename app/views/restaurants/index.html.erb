<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 mx-auto">
      <h1 class="mb-3">All Restaurants</h1>
      <% @restaurants.each do |restaurant|  %>
        <div class="card mb-3">
          <div class="card-header text-white bg-secondary font-weight-lighter py-2">
            <%= restaurant.category.capitalize %>
          </div>
          <div class="card-body font-weight-lighter">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= "#{restaurant.address} | #{restaurant.phone_number}" %></p>
            <%= link_to "More Details", restaurant_path(restaurant), class: "btn btn-link btn-sm border border-primary"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
